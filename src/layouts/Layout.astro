---
import { HeadHrefLangs } from "astro-i18next/components";
import { SEO } from "astro-seo";
import i18next, { t } from "i18next";
import "remixicon/fonts/remixicon.css";
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
import "../styles/app.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
const lang = i18next.language;
const seoTitle = t("seo.title") as string;
const seoDescription = t("seo.description") as string;
const seoOgTitle = t("seo.ogTitle") as string;
const seoOgImageAlt = t("seo.ogImageAlt") as string;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <HeadHrefLangs />
    <SEO
      title={seoTitle}
      description={seoDescription}
      openGraph={{
        basic: {
          title: seoOgTitle,
          type: "website",
          image: seoOgImageAlt,
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "@@thomasmtsdev",
        creator: "@@thomasmtsdev",
        title: seoOgTitle,
        imageAlt: seoOgImageAlt,
      }}
    />
    <title>{title}</title>
  </head>
  <body class="m-auto max-w-screen-2xl m-auto">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
